package com.mouni;
import java.util.ArrayList;
import java.util.List;
public class ArrayListDemo {
public static void main(String args[]) {
      //creating array list
ArrayList list=new ArrayList();
            //inserting values to arraylist
            list.add(10);
            list.add(20);
            list.add(30);
            list.add('a');
            list.add(3.14);
            list.add("java");
            System.out.println(list);
            list.add(true);
            list.add(1,2);
            System.out.println(list);
            list.add(30);
            list.add(20);
            list.add(null);
            System.out.println(list);
            List<Integer>arrlist=new ArrayList<Integer>();
            arrlist.addAll(list);
            //printing the array list
            System.out.println(arrlist);
            //finding the last index using the value
            System.out.println(list.lastIndexOf(20));
            //printing the list contains 1 in list
            System.out.println(list.contains(1));
            System.out.println(list.get(0));
            System.out.println(list.lastIndexOf(20));
            //printing the list size
            System.out.println(list.size());
            System.out.println(list.remove(4));
            //printing to remove the element
            System.out.println(list.remove("true"));
            System.out.println(list);
            //printing the list is empty
            System.out.println(list.isEmpty());
            System.out.println(list);
            List l=new ArrayList();
            System.out.println(l.isEmpty());
            //printing the list contains anjali
            System.out.println(list.contains("anjali"));
	}
}
